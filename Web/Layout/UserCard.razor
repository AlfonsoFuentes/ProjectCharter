<MudCard Elevation="0" Square="true" Class="@Class">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar >@LetterOfName</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudStack>
                <MudText Typo="Typo.body2"> @FirstName @SecondName</MudText>
                <MudText Typo="Typo.caption">@Email</MudText>
                <MudText Typo="Typo.caption">@PhoneNumber</MudText>
                
            </MudStack>
            
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

