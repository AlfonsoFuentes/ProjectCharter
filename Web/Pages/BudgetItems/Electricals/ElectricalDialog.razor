
<EditForm Model="@Model" OnValidSubmit="Submit">
    <MudCard>
        <MudCardContent>

            <FluentValidationValidator @ref="_fluentValidationValidator" />

            <TextField @bind-Value="@Model.Name"
                          Label="Name"
                         
                          ValidateAsync="ValidateAsync"
                          For="()=>Model.Name">
            </TextField>
            <CurrencyNumericField 
                             Label="Unitary Cost, USD"
                             @bind-Value="Model.UnitaryCost"
                             For="()=>Model.UnitaryCost"
                             ValidateAsync="ValidateAsync" />

            <DoubleNumericField
                             Label="Quantity"
                             @bind-Value="Model.Quantity"
                             For="()=>Model.Quantity"
                             ValidateAsync="ValidateAsync" />




            <Field Typo="Typo.body2" Label="Budget, USD">@Model.BudgetUSD.ToCurrencyCulture()</Field>

        </MudCardContent>
        <MudCardActions>

            <MudIconButton Icon="@Icons.Material.Filled.Cancel" OnClick="Cancel" Color="Color.Transparent" Variant="Variant.Outlined"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.Save" Disabled=@(!Validated||!IsEdit) ButtonType="ButtonType.Submit" Variant="Variant.Outlined"></MudIconButton>
        </MudCardActions>
    </MudCard>
</EditForm>
