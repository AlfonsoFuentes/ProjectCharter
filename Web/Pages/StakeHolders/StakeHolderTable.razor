@page "/StakeHolders"

 <TableTemplate TValue="StakeHolderResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="StakeHolders List">
    <ColumnsTemplate>
             <SelectColumn T="StakeHolderResponse" />
