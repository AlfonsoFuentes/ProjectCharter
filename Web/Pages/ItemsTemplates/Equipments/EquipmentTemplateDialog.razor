

<EditForm Model="@Model" OnValidSubmit="Submit">
    <MudDialog>
        <DialogContent>

            <FluentValidationValidator @ref="_fluentValidationValidator" />
            <MudGrid Spacing="2" Style="padding: 2px;width:100%; ">
                <MudItem xs="12" sm="12" md="4">
                    <TextField @bind-Value="@Model.TagLetter"
                               Label="Tag Letter"
                               ValidateAsync="ValidateAsync"
                               For="()=>Model.TagLetter">
                    </TextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">
                    <SelectIconButton @bind-Value="Model.Brand"
                                      TValue="BrandResponse"
                                      Label="Brand"
                                      ValidateAsync="ValidateAsync"
                                      For="()=>Model.Brand"
                                      Items="BrandsResponseList.Items"
                                      Clearable="true"
                                      Icon="@Icons.Material.Filled.Add"
                                      ButtonClick="AddBrand"
                                      ToolTip="Add new Brand"
                                      Property="@(p=>p.Name)">

                    </SelectIconButton>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">

                    <Select @bind-Value="Model.InternalMaterial"
                            Items="@MaterialEnum.List"
                            Label="Inner Material"
                            Property="@(p=>p.Name)"
                            For="()=>Model.InternalMaterial"
                            ValidateAsync="@(()=>ValidateAsync())"
                            Clearable="false">
                    </Select>
                </MudItem>
            </MudGrid>
            <MudGrid Spacing="2" Style="padding: 2px;width:100%; ">
                <MudItem xs="12" sm="12" md="4">
                    <TextField @bind-Value="@Model.Type"
                               Label="Type"
                               ValidateAsync="ValidateAsync"
                               For="()=>Model.Type">
                    </TextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">
                    <TextField @bind-Value="@Model.Model"
                               Label="Model"
                               ValidateAsync="@(()=>ValidateAsync())"
                               For="()=>Model.Model">
                    </TextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">
                    <Select @bind-Value="Model.ExternalMaterial"
                            Items="@MaterialEnum.List"
                            Label="Outer Material"
                            Property="@(p=>p.Name)"
                            For="()=>Model.ExternalMaterial"
                            ValidateAsync="@(()=>ValidateAsync())"
                            Clearable="false">
                    </Select>
                </MudItem>
            </MudGrid>
            <MudGrid Spacing="2" Style="padding: 2px;width:100%; ">
                <MudItem xs="12" sm="12" md="4">
                    <TextField @bind-Value="@Model.SubType"
                               Label="Sub Type"
                               ValidateAsync="ValidateAsync"
                               For="()=>Model.SubType">
                    </TextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">
                    <TextField @bind-Value="@Model.Reference"
                               Label="Reference"
                               ValidateAsync="@(()=>ValidateAsync())"
                               For="()=>Model.Reference">
                    </TextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4">
                    <DoubleNumericField Label="Value, USD"
                                          @bind-Value="Model.Value"
                                          For="()=>Model.Value"
                                          ValidateAsync="@(()=>ValidateAsync())" />
                </MudItem>
            </MudGrid>
         
            <MudGrid>
                <MudItem xs="12" sm="12" md="12">
                    <NozzleTemplateTable @bind-Items=@Model.Nozzles Validate="ValidateAsync"></NozzleTemplateTable>

                    <ValidationMessage For="() => Model.Nozzles" style="color:red; font-size:x-small;" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>

            <MudIconButton Icon="@Icons.Material.Filled.Cancel" OnClick="Cancel" Color="Color.Transparent" Variant="Variant.Outlined"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.Save" Disabled=!Validated ButtonType="ButtonType.Submit" Variant="Variant.Outlined"></MudIconButton>

        </DialogActions>
    </MudDialog>
</EditForm>
