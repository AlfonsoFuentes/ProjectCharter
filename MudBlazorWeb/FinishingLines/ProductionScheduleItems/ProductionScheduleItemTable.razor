@using Shared.Models.FinishingLines.ProductionScheduleItems



<TableTemplate TValue="ProductionScheduleItemResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="ProductionScheduleItems List">
    <ColumnsTemplate>
        <SelectColumn T="ProductionScheduleItemResponse" />
        <PropertyColumn Property="x => x.Order" Title="Order" TProperty="int" T="ProductionScheduleItemResponse" />
        <PropertyColumn Property="x => x.SkuName" Title="Sku" TProperty="string" T="ProductionScheduleItemResponse" />
        <PropertyColumn Property="x => x.MassPlanned.ToString()" Title="Mass planned" TProperty="string" T="ProductionScheduleItemResponse" />
       
        <TemplateColumn CellClass="d-flex justify-end" T="ProductionScheduleItemResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Remove" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


