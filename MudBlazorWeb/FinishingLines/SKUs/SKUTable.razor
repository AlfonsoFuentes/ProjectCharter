@using Shared.Models.FinishingLines.SKUs



<TableTemplate TValue="SKUResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="SKUs List">
    <ColumnsTemplate>
        <SelectColumn T="SKUResponse" />
     
        <PropertyColumn Property="x => x.Name" Title="Name" TProperty="string" T="SKUResponse" />
        <PropertyColumn Property="x => x.VolumePerEA.ToString()" Title="Volume/EA" TProperty="string" T="SKUResponse" />
        <PropertyColumn Property="x => x.MassPerEA.ToString()" Title="Mass/EA" TProperty="string" T="SKUResponse" />
       
        <TemplateColumn CellClass="d-flex justify-end" T="SKUResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Remove" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


