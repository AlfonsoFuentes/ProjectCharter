@using Shared.Models.FinishingLines.ProductionLineAssignments



<TableTemplate TValue="ProductionLineAssignmentResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="ProductionLineAssignments List">
    <ColumnsTemplate>
        <SelectColumn T="ProductionLineAssignmentResponse" />
        <PropertyColumn Property="x => x.LineName" Title="Name" TProperty="string" T="ProductionLineAssignmentResponse" />
        <TemplateColumn CellClass="d-flex justify-end" T="ProductionLineAssignmentResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Remove" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


