@using Shared.Models.FinishingLines.BIGWIPTanks



<TableTemplate TValue="BIGWIPTankResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="BIG WIP Tanks List">
    <ColumnsTemplate>
        <SelectColumn T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.Name" Title="Name" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.BackBoneName" Title="BackBone" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.Capacity.ToString()" Title="Capacity" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.CleaningTime.ToString()" Title="C&S time" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.InletFlow.ToString()" Title="Inlet flow" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.OutletFlow.ToString()" Title="Outlet flow" TProperty="string" T="BIGWIPTankResponse" />
        <PropertyColumn Property="x => x.MinimumLevelPercentage" Title="%Minimum level" TProperty="double" T="BIGWIPTankResponse" />
        <TemplateColumn CellClass="d-flex justify-end" T="BIGWIPTankResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Remove" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


