<TableTemplate TValue="NozzleTemplateResponse"
               AddNew="Add"
               DisableAdd=@DisableAdd
               @bind-NameFilter=@nameFilter
               Items="@Items"
               ShowSearch=false>
    <ColumnsTemplate>
        <SelectColumn T="NozzleTemplateResponse" />
        <PropertyColumn Property="x => x.NozzleType.Name" Title="Type" Sortable="false" T="NozzleTemplateResponse" TProperty="string" />
        <PropertyColumn Property="x => x.NominalDiameter.Name" Title="Diameter" Sortable="false" T="NozzleTemplateResponse" TProperty="string" />
        <PropertyColumn Property="x => x.ConnectionType.Name" Title="Connection" Sortable="false" T="NozzleTemplateResponse" TProperty="string" />


        <TemplateColumn CellClass="d-flex justify-end" T="NozzleTemplateResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(()=>Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(()=>Delete(template.Item))" />


                </MudStack>
            </CellTemplate>
        </TemplateColumn>


    </ColumnsTemplate>
</TableTemplate>





