<TableTemplate TValue="MonitoringLogResponse"
               @bind-NameFilter=@nameFilter
               ShowAdd=false
               ShowDelete=false
               Items="FilteredItems"
               ShowOrderUpDown="false"
               DisableDownButton="true"
               DisableUpButton="true">
    <ColumnsTemplate>

        <PropertyColumn Property="x => x.sInitialDate" Title="Created date" T="MonitoringLogResponse" TProperty="string" />
        <PropertyColumn Property="x => x.sEndDate" Title="Closed date" T="MonitoringLogResponse" TProperty="string" />
        <PropertyColumn Property="x => x.Name" Title="Issue" T="MonitoringLogResponse" TProperty="string" />
        <PropertyColumn Property="x => x.ClosingText" Title="Closing Text" T="MonitoringLogResponse" TProperty="string" />

        <TemplateColumn CellClass="d-flex justify-end" T="MonitoringLogResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>


