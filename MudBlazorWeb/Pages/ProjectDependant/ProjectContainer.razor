




<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-1">
    <MudTabPanel Text="Start" OnClick="@(() => StartShowAll=true)">
        <TemplateProjectContainer Title="Stakeholders" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <StakeHolderInsideProjectsTable Project=@Project></StakeHolderInsideProjectsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Itemized Budget" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <NewBudgetItemsTable Project="@Project"></NewBudgetItemsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Backgrounds"ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <BackGroundsTable Project="@Project"></BackGroundsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Objectives" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <ObjectivesTable Project="@Project"></ObjectivesTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Requirements" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <RequirementsTable Project="@Project"></RequirementsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Scopes" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <ScopesTable Project="@Project"></ScopesTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Bennefits" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <BennefitsTable Project="@Project"></BennefitsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Acceptance Criterias" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <AcceptanceCriteriasTable Project="@Project"></AcceptanceCriteriasTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Contraints" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <ConstrainstsTable Project="@Project"></ConstrainstsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Assumptions" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <AssumptionsTable Project="@Project"></AssumptionsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Expert Judgement" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <ExpertJudgementsTable Project="@Project"></ExpertJudgementsTable>
            </Content>
        </TemplateProjectContainer>
       
       
        <TemplateProjectContainer Title="Quality" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <QualitysTable Project="@Project"></QualitysTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Known risks" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <KnownRisksTable Project="@Project"></KnownRisksTable>
            </Content>
        </TemplateProjectContainer>

        <TemplateProjectContainer Title="Resources" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <ResourcesTable Project="@Project"></ResourcesTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Communications" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <CommunicationsTable Project="@Project"></CommunicationsTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Acquisitions" ShowContentChanged="StartShowAllChanged" ShowAll=@StartShowAll>
            <Content>
                <AcquisitionsTable Project="@Project"></AcquisitionsTable>
            </Content>
        </TemplateProjectContainer>
       
    </MudTabPanel>
    <MudTabPanel Text="Planning" OnClick="@(() => PlanningShowAll = true)">
        <TemplateProjectContainer Title="Planning Gantt Task" ShowContentChanged="PlanningShowAllChanged" ShowAll=@PlanningShowAll>
            <Content>
                <NewGanttTaskTable Project=@Project></NewGanttTaskTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Work BreakDown Structure" ShowContentChanged="PlanningShowAllChanged" ShowAll=@PlanningShowAll>
            <Content>
                <WbsChartSvg Project=@Project></WbsChartSvg>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Expending Tool" ShowContentChanged="PlanningShowAllChanged" ShowAll=@PlanningShowAll>
            <Content>
                <ProjectExpendingTool Project=@Project></ProjectExpendingTool>
            </Content>
        </TemplateProjectContainer>
    </MudTabPanel>
    <MudTabPanel Text="Execution" OnClick="@(() => ExecutionShowAll = true)" Disabled="@(Project.Status.Id != ProjectStatusEnum.Approved.Id)">
        <TemplateProjectContainer Title="Manage Purchase Orders in BudgetItems" ShowContentChanged="ExecutionShowAllChanged" ShowAll=@ExecutionShowAll>
            <Content>
                <BudgetItemsWithPurchaseOrders Project=@Project></BudgetItemsWithPurchaseOrders>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Manual Tasks" ShowContentChanged="ExecutionShowAllChanged" ShowAll=@ExecutionShowAll>
            <Content>
                <OtherTasksTable Project=@Project></OtherTasksTable>
            </Content>
        </TemplateProjectContainer>
    </MudTabPanel>
    <MudTabPanel Text="Monitoring" OnClick="@(() => MonitoringShowAll = true)" Disabled="@(Project.Status.Id != ProjectStatusEnum.Approved.Id)">
        
        <TemplateProjectContainer Title="Gantt Task Monitoring" ShowContentChanged="MonitoringShowAllChanged" ShowAll=@MonitoringShowAll>
            <Content>
                <MonitoringGanttTaskTable Project=@Project></MonitoringGanttTaskTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Monitoring expending tool " ShowContentChanged="MonitoringShowAllChanged" ShowAll=@MonitoringShowAll>
            <Content>
                <MonitoringExpendingToolTable Project=@Project></MonitoringExpendingToolTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Monitoring Project Logs " ShowContentChanged="MonitoringShowAllChanged" ShowAll=@MonitoringShowAll>
            <Content>
                <MonitoringLogTable Project=@Project></MonitoringLogTable>
            </Content>
        </TemplateProjectContainer>
        <TemplateProjectContainer Title="Warings" ShowContentChanged="MonitoringShowAllChanged" ShowAll=@MonitoringShowAll>
            <Content>
                <WarningsGetByProjectId Project=@Project></WarningsGetByProjectId>
            </Content>
        </TemplateProjectContainer>
    </MudTabPanel>
    <MudTabPanel Text="Closing" Disabled="true">
        <MudText>Content Disabled</MudText>
    </MudTabPanel>
</MudTabs>







@code {
    [Parameter]
    public ProjectResponse Project { get; set; } = null!;
   
    bool StartShowAll = true;
    bool PlanningShowAll = true;
    bool ExecutionShowAll = true;
    bool MonitoringShowAll = true;
    void StartShowAllChanged()
    {
        StartShowAll = !StartShowAll;
        
    }
    void PlanningShowAllChanged()
    {
        PlanningShowAll = !PlanningShowAll;

    }
    void ExecutionShowAllChanged()
    {
        ExecutionShowAll = !ExecutionShowAll;

    }
    void MonitoringShowAllChanged()
    {
        MonitoringShowAll = !MonitoringShowAll;

    }
}
