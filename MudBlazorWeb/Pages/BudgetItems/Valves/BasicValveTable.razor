<TableTemplate TValue="BasicValveResponse"
               AddNew="AddNew"
               @bind-NameFilter=@nameFilter
               DeleteGroup="DeleteGroup"
               Items="FilteredItems"
               @bind-SelectedItems=@SelecteItems
               TableTitle="Specific Valves List">
    <ColumnsTemplate>
        <SelectColumn T="BasicValveResponse"></SelectColumn>
        <PropertyColumn Property="x => x.Tag" Title="Tag" T="BasicValveResponse" TProperty="string" />
        <PropertyColumn Property="x => x.Name" Title="Name" T="BasicValveResponse" TProperty="string" />
        <PropertyColumn Property="x => x.Brand" Title="Brand" T="BasicValveResponse" TProperty="string" />
        <PropertyColumn Property="x => x.sBudgetUSD" Title="Budget, USD" T="BasicValveResponse" TProperty="string" />
        <TemplateColumn CellClass="d-flex justify-end" T="BasicValveResponse">
            <CellTemplate Context="template">
                <MudStack Row=true Spacing="2">
                    <IconButton ToolTip="@($"Edit {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" Variant=Variant.Outlined OnClick="@(() => Edit(template.Item))" />
                    <IconButton ToolTip="@($"Delete {template.Item.Name}")" Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" Variant=Variant.Outlined Color="Color.Surface" OnClick="@(() => Delete(template.Item))" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </ColumnsTemplate>
</TableTemplate>

